<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#ffffff"
	    android:orientation="horizontal" >
	    <ImageView 
	        android:id="@+id/collet_from_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/collet_from_icon1"/>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="8dp"
	        android:orientation="vertical">
	        <RelativeLayout 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content">
	            <TextView 
	                android:id="@+id/collet_from_name"
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:textColor="#353535"
		            android:textSize="13sp"
	        		android:text="无线技术CTO圈"/>
	            <TextView 
	                android:id="@+id/collet_item_time"
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_alignParentRight="true"
	        		android:text="2015-1-23"/>
	        </RelativeLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" >
	            <ImageView 
	                android:id="@+id/collet_item_icon"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	       			android:layout_marginTop="5dp"
	       			android:background="@drawable/collet_item_icon1"/>
	            <LinearLayout 
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:orientation="vertical">
	        		<TextView 
	        		    android:id="@+id/collet_item_des"
	        		    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_marginTop="5dp"
	        			android:layout_marginLeft="5dp"
	        			android:textColor="#373737"
	        			android:textSize="12sp"
	        			android:maxLines="2"
	        			android:ellipsize="end"
	        			android:text="技术团队的情绪与效率dnfjkdsfsjkasadasdaddfskdfskjdfdsjkfsdjkdsjkfhsjkfshjk"/>
	        		<TextView 
	        		    android:id="@+id/collet_item_from"
	        		    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content"
	        			android:layout_marginLeft="5dp"
	        			android:textSize="10sp"
	        			android:text="www.infoq.com"/>
	                
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    <View 
        android:id="@+id/near_line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#d6d6d6"/>

</LinearLayout>
