<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ebebeb" >
    <LinearLayout 
    	android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="20dp" 
        android:gravity="center">       
        <TextView
	    	android:id="@+id/my_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:drawablePadding="20dp"
	        android:drawableLeft="@drawable/near_item_icon1"
	        android:gravity="center_vertical"
	        android:text="学习ing"
	        android:textColor="#373737"
	        android:textSize="18sp" />
        <ImageView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="20dp"
            android:background="@drawable/my_erweima"/>  	         
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:orientation="vertical" > 
        <TextView
	        android:id="@+id/my_pic"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_marginLeft="20dp"
	        android:drawablePadding="20dp"
	        android:drawableLeft="@drawable/my_pic"
	        android:gravity="center_vertical"
	        android:text="相册"
	        android:textColor="#373737"
	        android:textSize="15sp" />
        <View 
		    android:id="@+id/line1"
		    android:layout_width="match_parent"
		    android:layout_height="0.1dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="#d6d6d6"/>
        <TextView
	        android:id="@+id/my_collect"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_marginLeft="20dp"
	        android:drawablePadding="20dp"
	        android:drawableLeft="@drawable/my_collect"
	        android:gravity="center_vertical"
	        android:text="收藏"
	        android:textColor="#373737"
	        android:textSize="15sp" />           
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="20dp" > 
        <TextView
	        android:id="@+id/my_purse"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_marginLeft="20dp"
	        android:drawablePadding="20dp"
	        android:drawableLeft="@drawable/my_purse"
	        android:gravity="center_vertical"
	        android:text="钱包"
	        android:textColor="#373737"
	        android:textSize="15sp" /> 
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="20dp" > 
        <TextView
	        android:id="@+id/my_setting"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_marginLeft="20dp"
	        android:drawablePadding="20dp"
	        android:drawableLeft="@drawable/my_setting"
	        android:gravity="center_vertical"
	        android:text="设置"
	        android:textColor="#373737"
	        android:textSize="15sp" /> 
    </LinearLayout>
    

</LinearLayout>
